<Window x:Class="NoisyKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoisyKeyboard"
        mc:Ignorable="d"
        Title="NoisyKeyboard" Height="136.604" Width="200" ResizeMode="NoResize" Topmost="True" Deactivated="Window_Deactivated">
    <StackPanel Orientation="Vertical">
        <ComboBox x:Name="comboboxSounds" HorizontalContentAlignment="Center" SelectionChanged="comboboxSounds_SelectionChanged"/>
        <Separator/>
        <StackPanel Orientation="Horizontal">
            <Label Content=" 🔊  " FontSize="14"/>
            <Separator/>
            <Slider x:Name="sliderVolume"  Maximum="100" Minimum="10" Value="10" VerticalAlignment="Center" ValueChanged="sliderVolume_ValueChanged" Width="150" />
        </StackPanel>
        <Separator/>
        <CheckBox x:Name="btnCheckEnableSound" Content="Enable Sound" Checked="btnCheckEnableSound_Checked" Unchecked="btnCheckEnableSound_Unchecked"/>
        <Separator/>
        <Button x:Name="btnExit" Content="Exit" Click="btnExit_Click"/>
        <Separator/>
    </StackPanel>
    
        
</Window>
